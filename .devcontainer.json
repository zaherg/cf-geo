{
    "name": "CF-Geo Cloudflare Workers with Hono",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bullseye",
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "16gb"
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20",
            "nodeGypDependencies": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "github.copilot",
                "github.copilot-chat",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-azuretools.vscode-docker",
                "mikestead.dotenv",
                "bradlc.vscode-tailwindcss",
                "yoavbls.pretty-ts-errors",
                "formulahendry.auto-rename-tag"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "explicit"
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "github.copilot.enable": {
                    "*": true,
                    "plaintext": true,
                    "markdown": true,
                    "javascript": true,
                    "typescript": true,
                    "tsx": true,
                    "jsx": true
                },
                "github.copilot.chat.agent.enable": true,
                "typescript.tsdk": "node_modules/typescript/lib"
            }
        }
    },
    "forwardPorts": [8787],
    "portsAttributes": {
        "8787": {
            "label": "Wrangler Dev Server",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "npm install",
    "remoteUser": "node",
    "mounts": [
        "source=cf-geo-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
    ],
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/node/.npm-global/bin",
        "NODE_ENV": "development"
    }
}
